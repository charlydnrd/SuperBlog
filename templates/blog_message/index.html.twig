{% extends 'base.html.twig' %}

{% block title %}BlogMessage index{% endblock %}

{% block body %}
    <h1>BlogMessage index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Blog</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for blog_message in blog_messages %}
            <tr>
                <td>{{ blog_message.id }}</td>
                <td>{{ blog_message.blog }}</td>
                <td>
                    <a href="{{ path('blog_message_show', {'id': blog_message.id}) }}">show</a>
                    <a href="{{ path('blog_message_edit', {'id': blog_message.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('blog_message_new') }}">Create new</a>
{% endblock %}
